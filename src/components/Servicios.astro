---
// Servicios destacados
const servicios = [
    {
        nombre: "Consulta Astrológica",
        url: "/consulta-astrologica",
    },
    {
        nombre: "Programación Neurolingüística (PNL)",
        url: "/programacion-neurolinguistica",
    },
    {
        nombre: "Consulta Tarot Transpersonal",
        url: "https://centroholisticosaintgermain.com/servicios/online-presencial/consulta-tarot-transpersonal/",
    },
    {
        nombre: "Consulta en Terapia Floral",
        url: "https://centroholisticosaintgermain.com/servicios/online-presencial/consulta-en-terapia-floral/",
    },
    {
        nombre: "Consulta Biodescodificación Biológica de Enfermedades",
        url: "https://centroholisticosaintgermain.com/servicios/online-presencial/consulta-en-biodecodificacion-de-enfermedades/",
    },
    {
        nombre: "Hipnosis Clínica Reparadora",
        url: "https://centroholisticosaintgermain.com/servicios/presencial/hipnosis-clinica-reparadora/",
    },
];
---

<section id="servicios" class="py-16 bg-white">
    <h2
    class="text-2xl md:text-4xl text-blue-800 font-bold text-center mb-10" data-aos="fade-up" data-aos-duration="1000"
    >
        Algunos de nuestros Servicios Destacados
    </h2>
    <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
    >
        {
            servicios.map((servicio, index) => {
                const isLocal = servicio.url.startsWith('/');
                return (
                    <a
                        href={servicio.url}
                        target={isLocal ? '_self' : '_blank'}
                        rel={isLocal ? '' : 'noopener'}
                        class="block bg-violet-50 hover:bg-violet-100 transition rounded-xl shadow p-6 text-center border border-violet-100"    
                        data-aos="fade-up"
                        data-aos-duration="1000"
                        data-aos-delay={index * 200}
                    >
                        <h3 class="text-xl font-semibold text-blue-800 mb-2">
                            {servicio.nombre}
                        </h3>
                        {servicio.nombre === "Consulta Astrológica" && (
                            <img src="/consulta-astrologica.jpg" alt="Consulta Astrológica" class="w-full h-auto rounded-lg my-4" />
                        )}
                        {servicio.nombre === "Programación Neurolingüística (PNL)" && (
                            <img src="/pnl1.png" alt="Programación Neurolingüística (PNL)" class="w-full h-auto rounded-lg my-4" />
                        )}
                        <span class="text-blue-800 font-bold">Ver más</span>
                    </a>
                )
            })
        }
    </div>
</section>
