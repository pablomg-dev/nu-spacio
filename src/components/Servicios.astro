---
// Servicios destacados
const servicios = [
    {
        nombre: "Consulta Astrológica",
        url: "/consulta-astrologica",
        imgSrc: '/consulta-astrologica-1.png',
    },
    {
        nombre: "Programación Neurolingüística (PNL)",
        url: "/programacion-neurolinguistica",
        imgSrc: '/pnl2.jpg',
    },
    {
        nombre: "Consulta Tarot Transpersonal",
        url: "/consulta-tarot",
        imgSrc: '/consulta-tarot-1.jpeg',
    },
    {
        nombre: "Yoga Integral",
        url: "/yoga",
        imgSrc: '/yoga1.jpeg',
    },
];
---

<section id="servicios" class="py-16 bg-white">
    <h2
    class="text-2xl md:text-4xl text-blue-800 font-bold text-center mb-10 px-2" data-aos="fade-up" data-aos-duration="1000"
    >
        Entre nuestros servicios destacados, abordamos la Terapia Holística y la Medicina Germánica
    </h2>
    <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
    >
        {
            servicios.map((servicio, index) => {
                const isLocal = servicio.url.startsWith('/');
                return (
                    <a
                        href={servicio.url}
                        target={isLocal ? '_self' : '_blank'}
                        rel={isLocal ? '' : 'noopener'}
                        class="bg-violet-50 hover:bg-violet-100 transition rounded-xl shadow p-6 text-center border border-violet-100 h-full flex flex-col"
                        data-aos="fade-up"
                        data-aos-duration="1000"
                        data-aos-delay={index * 200}
                    >
                        <div class="flex-grow">
                            <div class="service-media" data-aos="fade-up" data-aos-duration="1200" data-aos-delay={index * 200}>
                                {servicio.imgSrc ? (
                                    <img src={servicio.imgSrc} alt={servicio.nombre} />
                                ) : (
                                    <div class="bg-gray-100 w-full h-full flex items-center justify-center text-gray-300">Imagen próximamente</div>
                                )}
                            </div>
                            <div class="service-caption" data-aos="fade-up" data-aos-duration="800" data-aos-delay={index * 200 + 200}>
                                <h3 class="text-xl font-semibold text-blue-800 mb-2">{servicio.nombre}</h3>
                                <div class="mt-3"><span class="text-yellow-400 font-bold">Ver más</span></div>
                            </div>
                        </div>
                    </a>
                )
            })
        }
    </div>
</section>
