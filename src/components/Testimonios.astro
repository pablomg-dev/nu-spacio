---
// Testimonios destacados (puedes agregar más)
const testimonios = [
    {
        nombre: "Yanina S.",
        texto: "La Maestra Holistica Mónica Alicia Barneda es una persona muy cálida y amable; con un gran sentido de empatía. Está permanentemente atenta a todos los detalles... Las sesiones de Reiki han sido una hermosa experiencia.",
        ubicacion: "Buenos Aires, Argentina",
    },
    {
        nombre: "Roxana L.",
        texto: "Excelente nivel de profesionalismo. Para mi fue un placer haber llegado al Centro Holistico Saint Germain y haber conocido a Mónica Alicia Barneda, un ser de conocimiento, sabiduría y también calidez.",
        ubicacion: "Buenos Aires, Argentina",
    },
    {
        nombre: "Sebastian Y.",
        texto: "Cuando llegué al Centro Holístico Saint Germain, tuve una corazonada que era el lugar que tanto estaba buscando... Desde ese día, mi alma está en el camino correcto.",
        ubicacion: "Buenos Aires, Argentina",
    },
];
---

<section class="py-16 bg-violet-50">
    <h2
    class="text-2xl md:text-4xl text-blue-800 font-bold text-center mb-10" data-aos="fade-up" data-aos-duration="1000"
    >
        Testimonios
    </h2>
    <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
    >
        {
            testimonios.map((testimonio, index) => (
                <div class="bg-white rounded-xl shadow p-6 border border-violet-100" data-aos="fade-up" data-aos-duration="1000" data-aos-delay={index * 200}>
                    <p class="text-blue-800 italic mb-4">
                        “{testimonio.texto}”
                    </p>
                    <div class="text-blue-800 font-semibold">
                        {testimonio.nombre}
                    </div>
                    <div class="text-xs text-blue-800/60">
                        {testimonio.ubicacion}
                    </div>
                </div>
            ))
        }
    </div>
</section>
